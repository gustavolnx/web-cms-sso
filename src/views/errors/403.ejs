<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card text-center">
        <div class="card-header bg-danger text-white">
          <h4 class="mb-0">Acesso Negado</h4>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <i class="fas fa-lock fa-5x text-danger"></i>
          </div>
          <h5 class="card-title">Erro 403 - Acesso Proibido</h5>
          <p class="card-text">
            <%= message || 'Você não tem permissão para acessar esta página.' %>
          </p>
          <p class="card-text">
            Se você acredita que deveria ter acesso a este recurso, entre em contato com o administrador do sistema.
          </p>
          <a href="/dashboard" class="btn btn-primary mt-3">
            <i class="fas fa-home"></i> Voltar para o Dashboard
          </a>
        </div>
        <div class="card-footer text-muted">
          <small>Se o problema persistir, entre em contato com o suporte técnico.</small>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 